//    WE CAN ALSO USE STRUCTURE IN THIS  SIMILAR WAY TO THE CLASS ONLY AT THE PLACE OF CLASS ((( WE HAVE TO WRITE THE STRUCT KEYWORD ))))
  
 // LET SEE---------->>>>>>>

 #include<iostream>
 using namespace std;

 struct tree{

   int data ;
   tree* left;
   tree* right;

   tree(int x){
   data = x ;
   right = NULL;
   left = NULL;
   }
  
 

 };
 
 int main(){

  tree* root ;

  root = new tree(1);
  root->left = new tree(2);
  root->right = new tree(3); 
        

      cout<<root->data<<endl;     
      cout<<root->left->data<<endl;
       cout<<root->right->data<<endl;
  


 return 0;
  }    
